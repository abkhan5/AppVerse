<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Appverse.Desktop.VisualControls.Themes.Blue">





    <Style x:Key="TextBlockStyle" BasedOn="{x:Null}" TargetType="{x:Type TextBlock}">
        
        <Setter Property="Background" Value="Blue" />
    </Style>


    <Style x:Key="HeaderTextBlock" BasedOn="{StaticResource TextBlockStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Bold" />
        <Setter Property="Background" Value="Blue" />        
    </Style>
    
    
    
</ResourceDictionary>