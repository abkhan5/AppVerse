<UserControl x:Class="AppVerse.Desktop.GameOfLife.Views.GameOfLifeShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppVerse.Desktop.GameOfLife.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions >
            <RowDefinition Height="20*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>



        <ContentControl Content="{Binding GameOfLifeInformationView}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Grid.Row="0"/>


        <ContentControl Content="{Binding GameView}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Grid.Row="1"/>


    </Grid>
</UserControl>
