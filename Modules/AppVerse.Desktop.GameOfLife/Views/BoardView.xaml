<UserControl x:Class="AppVerse.Desktop.GameOfLife.Views.BoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppVerse.Desktop.GameOfLife.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    
        <Border Style="{DynamicResource BoarderStyle}">
        <StackPanel Orientation="Vertical" >
          <TextBlock Text="{Binding GenerationProgress,Mode=OneWay,IsAsync=True}"
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     TextAlignment="Center"/>
            
        <ScrollViewer  Style="{DynamicResource FavsScrollViewer}" >
            <ContentControl IsEnabled="{Binding IsBoardEnabled}" Content="{Binding GameBoard}" />
        </ScrollViewer>
        </StackPanel>

    </Border>
   

</UserControl>
